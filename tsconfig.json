{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./src/@types"
    ]
  },
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "build",
    "scripts"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ],
}